<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userController" class="usts.pycro.spring.controller.UserController">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="userService" class="usts.pycro.spring.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <bean id="userDao" class="usts.pycro.spring.dao.impl.UserDaoImpl"/>
</beans>